---
import { websites } from '@/data/websites';

interface Props {
  websites: typeof websites;
}

const { websites: sites } = Astro.props;
---

<section class="websites">
  {
    sites.map(website => (
      <div class="website">
        <a class="image" href={`/websites/${website.slug}`}>
          <img
            alt={`Screenshot of ${website.name}`}
            loading="lazy"
            src={website.screenshot}
          />
          <p>
            <span>{website.name}</span>
          </p>
        </a>
        <div class="details">
          <a class="link" href={website.url} rel="noreferrer" target="_blank">
            {website.address}
          </a>
        </div>
      </div>
    ))
  }
  {sites.length === 1 && <div />}
</section>

<style>
  .websites {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 36px 32px;

    & .website {
      width: 100%;

      & .image {
        position: relative;
        display: block;

        &:hover {
          & p {
            opacity: 1;

            & span {
              transform: scale(1);
            }
          }
        }

        & img {
          display: block;
          width: 100%;
          aspect-ratio: 1 / 1;
          border: 1px solid var(--color-neutral-200);
        }

        & p {
          position: absolute;
          top: 0;
          left: 0;
          display: flex;
          align-items: center;
          justify-content: center;
          width: 100%;
          height: 100%;
          font-size: var(--font-2xsm);
          font-weight: 500;
          color: var(--color-foreground);
          text-transform: uppercase;
          pointer-events: none;
          background-color: rgb(9 11 11 / 70%);
          backdrop-filter: blur(5px);
          border: 1px solid var(--color-neutral-200);
          opacity: 0;
          transition: 0.2s;

          & span {
            display: block;
            transition: 0.2s;
            transform: scale(0.5);
          }
        }
      }

      & .details {
        display: flex;
        column-gap: 8px;
        align-items: center;
        justify-content: flex-end;
        margin-top: 12px;
        font-size: var(--font-sm);

        & .link {
          font-family: var(--font-mono);
          font-size: var(--font-xsm);
          color: var(--color-foreground-subtle);
          text-decoration: none;
          transition: 0.2s;

          &:hover {
            color: var(--color-foreground);
          }
        }
      }
    }
  }
</style>
